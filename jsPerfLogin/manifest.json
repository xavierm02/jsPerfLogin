{
	"name": "jsPerfLogin",
	"version": "1.1",
    "manifest_version": 2,
	"description": "Automatically log in on jsPerf.com.",
	"permissions": [
		"*://jsperf.com/*",
        "storage"
	],
    "icons": {
        "16": "icon16.ico",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "minimum_chrome_version": "21",
    "background": {
        "scripts": [ "background.js" ]
    },
	"content_scripts": [
		{
			"matches": [ "*://jsperf.com/*" ],
			"js": [ "contentScript.js" ]
		}
	],
    "options_page": "options.html",
    "content_security_policy": "default-src 'self'; style-src 'self' http://jsperf.com"
}